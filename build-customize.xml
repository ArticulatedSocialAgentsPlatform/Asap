 <property name="rebuild.list.prop" value="${language}.rebuild.list"/>
 <property name="release.list.prop" value="${language}.release.list"/>
  <propertycopy name="rebuild.list" from="${rebuild.list.prop}"/>
  <propertycopy name="release.list" from="${release.list.prop}"/>
