<project name="Asap-ALL" default="build" basedir="."
        xmlns:ac="antlib:net.sf.antcontrib"	
	>   
	
	
	<!-- really ugly way to handle nested properties: http://orthogonal.me/2010/03/29/nested-ant-properties/ -->
	<!--
	<macrodef name="propertycopy">
  <attribute name="name"/>
  <attribute name="from"/>
