<?xml version="1.0" standalone="no"?>
<!DOCTYPE definition SYSTEM "./utterances.dtd">

<definition>
    <utterance>
        <behaviorspec>
            <gesture id="blech" scope="hand">
                <timing onset="1.0" end="3.0"/>
                <constraints scope="right_arm">
                    <symmetrical center="0 0 0 0 0 0" dominant="right_arm" scope="undef" symmetry="SymMS">
                        <parallel>
                            <static scope="right_arm" slot="HandShape" value="ASLb"/>
                            <static scope="right_arm" slot="PalmOrientation" value="DirD"/>
                            <static scope="right_arm" slot="ExtFingerOrientation" value="DirA"/>
                            <static slot="GazeDirection" value="1000 0 0" scope="head"/>
                            <dynamic scope="right_arm" slot="HandLocation">
                                <dynamicElement scope="right_arm" type="linear" >
                                    <value type="start" name="LocLowerChest LocCCenterRight LocNorm"/>
                                    <value type="end" name="LocLowerChest LocRight LocNorm"/>
                                </dynamicElement>
                            </dynamic>
                        </parallel>
                    </symmetrical>
                </constraints>
            </gesture>
        </behaviorspec>
    </utterance>
</definition>