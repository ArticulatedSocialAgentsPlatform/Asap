<?xml version="1.0" standalone="no"?>
<!DOCTYPE definition SYSTEM "./utterances.dtd">

<definition>
    <utterance>
        <behaviorspec id="gesture_part1">
            <gesture id="stuhl" scope="hand">
                <timing onset="1.0" end="3.0"/>
                <constraints>
                    <parallel>
                        <static scope="left_arm" slot="PalmOrientation" value="DirAR"/>
                        <static scope="left_arm" slot="ExtFingerOrientation" value="DirA"/>
                        <static scope="left_arm" slot="HandShape" value="ASLcsmall"/>
                            <dynamic scope="left_arm" slot="HandLocation">
                                <dynamicElement scope="left_arm" type="linear" >
                                    <value type="start" name="LocHip LocPeripheryLeft LocNorm"/>
                                    <value type="end" name="LocStomach LocLeft LocNear"/>
                                </dynamicElement>
                            </dynamic>
                    </parallel>
                </constraints>
            </gesture>
        </behaviorspec>
        <behaviorspec id="gesture_part2">
            <gesture id="stuhl" scope="hand">
                <timing onset="1.0" end="3.0"/>
                <constraints>
                    <static slot="GazeDirection" value="1000 -500 1000" scope="head"/>
                </constraints>
            </gesture>
        </behaviorspec>
        <behaviorspec id="gesture_part3">
            <gesture id="stuhl" scope="hand">
                <timing onset="3.5" end="4.0"/>
                <constraints>
                    <static slot="GazeDirection" value="50 0 50" scope="head"/>
                </constraints>
            </gesture>
        </behaviorspec>
    </utterance>
</definition>
