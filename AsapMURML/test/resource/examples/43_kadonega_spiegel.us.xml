<?xml version="1.0"?>
<bml xmlns="http://www.bml-initiative.org/bml/bml-1.0" id="bml1">
    
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><parallel>
                        <static scope="right_arm" slot="PalmOrientation" value="DirT"/>
                        <static scope="right_arm" slot="ExtFingerOrientation" value="DirU"/>
                        <static scope="left_arm" slot="PalmOrientation" value="DirT"/>
                        <static scope="left_arm" slot="ExtFingerOrientation" value="DirU"/>
                        <sequence>
                            <parallel>
                            <dynamic scope="right_arm" slot="HandLocation">
                                <dynamicElement scope="right_arm" type="linear">
                                    <value type="start" name="LocHead LocCCenterRight LocNorm"/>
                                    <value type="end" name="LocUpperChest LocCCenterRight LocNorm"/>
                                </dynamicElement>
                            </dynamic>
                            <dynamic scope="left_arm" slot="HandLocation">
                                <dynamicElement scope="left_arm" type="linear">
                                    <value type="start" name="LocHead LocCenter LocNorm"/>
                                    <value type="end" name="LocUpperChest LocCenter LocNorm"/>
                                </dynamicElement>
                            </dynamic>
                            </parallel>
                        </sequence>
                    </parallel></murml-description></murml-gesture>
        
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><static slot="GazeDirection" value="1000 0 0" scope="head"/></murml-description></murml-gesture>
        
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><static slot="GazeDirection" value="50 0 50" scope="head"/></murml-description></murml-gesture>
        
    
</bml>
