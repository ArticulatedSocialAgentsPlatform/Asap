<?xml version="1.0"?>
<bml xmlns="http://www.bml-initiative.org/bml/bml-1.0" id="bml1">
    
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><sequence>
                        <dynamic scope="right_arm" slot="HandLocation">
                            <dynamicElement scope="right_arm" type="linear">
                                <value type="start" name="LocHip LocPeripheryRight LocNorm"/>
                                <value type="end" name="LocStomach LocRight LocNear"/>
                            </dynamicElement>
                        </dynamic>
                        <parallel>
                            <static scope="right_arm" slot="HandShape" value="ASLclarge"/>
                            <dynamic scope="right_arm" slot="HandLocation">
                                <dynamicElement scope="right_arm" type="linear">
                                    <value type="start" name="LocStomach LocRight LocNear"/>
                                    <value type="end" name="LocHead LocPeripheryRight LocContact"/>
                                </dynamicElement>
                                <dynamicElement scope="right_arm" type="linear">
                                    <value type="start" name="LocHead LocPeripheryRight LocContact"/>
                                    <value type="end" name="LocHead LocRight LocNorm"/>
                                </dynamicElement>
                            </dynamic>
                        </parallel>
                    </sequence></murml-description></murml-gesture>
        
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><static slot="GazeDirection" value="50 -30 50" scope="head"/></murml-description></murml-gesture>
        
        
            <murml-gesture xmlns="http://www.techfak.uni-bielefeld.de/ags/soa/murml"><murml-description scope="hand"><static slot="GazeDirection" value="50 0 50" scope="head"/></murml-description></murml-gesture>
        
    
</bml>
